<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jni.main.recyclerviewdemo">

    <uses-permission android:name="android.permission.Internet" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AverageActivity">
        </activity>
        <activity android:name=".HostActivity">
        </activity>
        <activity android:name=".MixActivity">
        </activity>
        <activity
            android:name=".LandAverageActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".LandHostActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity android:name=".RecyclerViewPagerActivity">
        </activity>
    </application>

</manifest>